<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/cf7f8f8"
    android:gravity="center_horizontal"
    android:minHeight="@dimen/dp100"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTip"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp36"
        android:layout_marginTop="@dimen/dp12"
        android:orientation="horizontal"
        android:visibility="gone">

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/px_1"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp28"
            android:layout_weight="1"
            android:background="@color/cb5b5b6" />

        <TextView
            android:id="@+id/tvTip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp24"
            android:layout_marginRight="@dimen/dp24"
            android:gravity="center"
            android:text="以下是历史消息"
            android:textColor="@color/c898989" />

        <View
            android:layout_width="0dp"
            android:layout_height="@dimen/px_1"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp28"
            android:layout_weight="1"
            android:background="@color/cb5b5b6" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp24"
        android:layout_marginTop="@dimen/dp6"
        android:gravity="center"
        android:text="2018-9-21 10:22"
        android:textColor="@color/c434343"
        android:textSize="@dimen/sp12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp64"
        android:layout_marginBottom="@dimen/dp6"
        android:layout_marginLeft="@dimen/dp12"
        android:layout_marginRight="@dimen/dp12"
        android:layout_marginTop="@dimen/dp6"
        android:background="@drawable/shape_white_solid_corner_small"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp6"
        android:paddingLeft="@dimen/dp12"
        android:paddingTop="@dimen/dp6">

        <ImageView
            android:layout_width="@dimen/dp32"
            android:layout_height="@dimen/dp32"
            android:layout_gravity="center_vertical"
            android:src="@drawable/msg_order_notice" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp12"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="您的订单已结单"
                android:textColor="@color/c434343"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:text="您得陪诊订单，订单号:PZ19983778293已被接单。（点击查看详情）"
                android:textColor="@color/c898989"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
