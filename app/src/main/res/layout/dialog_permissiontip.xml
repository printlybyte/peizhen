<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_weight="8"
        android:background="@drawable/shape_white_solid_corner_small"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/dp24">

        <TextView
            android:id="@+id/permissionTipTitile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:textColor="@color/dialog_permission_titile"
            android:textSize="@dimen/sp18" />

        <TextView
            android:id="@+id/permissionTipContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp32"
            android:gravity="center_vertical|left"
            android:textColor="@color/dialog_permission_content"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/permissionTipConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp36"
            android:gravity="center_vertical|right"
            android:textColor="@color/dialog_permission_confirm"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"/>

</LinearLayout>
