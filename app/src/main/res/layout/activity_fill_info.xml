<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cf7f8f8"
    android:orientation="vertical"
    tools:context=".ui.login.FillInfoActivity">

    <com.yinfeng.wypzh.widget.TopBar
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/mSmartRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/dp12">

                <RelativeLayout
                    android:id="@+id/rlChooseHeadIcon"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:background="@drawable/shape_white_solid_corner_small"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingRight="@dimen/dp12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|left"
                        android:text="@string/fillinfo_head"
                        android:textColor="@color/c434343"
                        android:textSize="@dimen/sp14" />

                    <ImageView
                        android:id="@+id/ivheader"
                        android:layout_width="@dimen/dp33"
                        android:layout_height="@dimen/dp33"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/head_default" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:layout_marginTop="@dimen/dp6"
                    android:background="@drawable/shape_white_solid_corner_small"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingRight="@dimen/dp12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|left"
                        android:text="@string/fillinfo_name"
                        android:textColor="@color/c434343"
                        android:textSize="@dimen/sp14" />

                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="@string/fillinfo_name_hint"
                        android:maxLength="8"
                        android:minWidth="@dimen/dp100"
                        android:textColor="@color/c434343"
                        android:textColorHint="@color/cb5b5b5"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:layout_marginTop="@dimen/dp6"
                    android:background="@drawable/shape_white_solid_corner_small"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingRight="@dimen/dp12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|left"
                        android:text="@string/fillinfo_gender"
                        android:textColor="@color/c434343"
                        android:textSize="@dimen/sp14" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/llGenderMan"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivGenderMan"
                                android:layout_width="@dimen/dp14"
                                android:layout_height="@dimen/dp14"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/selected_oval" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp6"
                                android:gravity="center"
                                android:text="男"
                                android:textColor="@color/c434343"
                                android:textSize="@dimen/sp14" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llGenderWoman"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp14"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/ivGenderWoman"
                                android:layout_width="@dimen/dp14"
                                android:layout_height="@dimen/dp14"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/unselect_oval" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="@dimen/dp6"
                                android:gravity="center"
                                android:text="女"
                                android:textColor="@color/c434343"
                                android:textSize="@dimen/sp14" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp48"
                    android:layout_marginTop="@dimen/dp6"
                    android:background="@drawable/shape_white_solid_corner_small"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingRight="@dimen/dp12">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical|left"
                        android:text="@string/fillinfo_ID"
                        android:textColor="@color/c434343"
                        android:textSize="@dimen/sp14" />

                    <EditText
                        android:id="@+id/etID"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:gravity="center_vertical|right"
                        android:hint="@string/fillinfo_necessary"
                        android:inputType="text"
                        android:digits="0123456789xX"
                        android:maxLength="18"
                        android:minWidth="@dimen/dp100"
                        android:textColor="@color/c434343"
                        android:textColorHint="@color/cb5b5b5"
                        android:textSize="@dimen/sp14" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llHistoryAll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp6"
                    android:background="@drawable/shape_white_solid_corner_small"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp12"
                    android:paddingRight="@dimen/dp12">


                    <LinearLayout
                        android:id="@+id/llHistory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/fillinfo_history_height"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical|left"
                            android:text="@string/fillinfo_history"
                            android:textColor="@color/c434343"
                            android:textSize="@dimen/sp14" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/fillinfo_history_height"
                            android:layout_marginLeft="@dimen/dp14"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/llHistoryHas"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivHistoryHas"
                                    android:layout_width="@dimen/dp14"
                                    android:layout_height="@dimen/dp14"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/selected_oval" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp6"
                                    android:gravity="center"
                                    android:text="有"
                                    android:textColor="@color/c434343"
                                    android:textSize="@dimen/sp14" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llHistoryNo"
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/fillinfo_history_height"
                                android:layout_marginLeft="@dimen/dp14"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/ivHistoryNo"
                                    android:layout_width="@dimen/dp14"
                                    android:layout_height="@dimen/dp14"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/unselect_oval" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="@dimen/dp6"
                                    android:gravity="center"
                                    android:text="无"
                                    android:textColor="@color/c434343"
                                    android:textSize="@dimen/sp14" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llTipsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp6"
                        android:layout_marginTop="@dimen/dp6"
                        android:orientation="vertical">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/mRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left" />

                        <EditText
                            android:id="@+id/etSickDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_greystroke_whitesolid_corner"
                            android:gravity="left"
                            android:hint="请输入病情描述"
                            android:lines="4"
                            android:minHeight="@dimen/dp48"
                            android:padding="@dimen/dp12"
                            android:textColor="@color/c434343"
                            android:textColorHint="@color/cb5b5b5"
                            android:textSize="@dimen/sp12"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btComplete"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp33"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dp12"
                    android:layout_marginTop="@dimen/dp36"
                    android:background="@drawable/shape_green_solid_corner"
                    android:gravity="center"
                    android:text="@string/fillinfo_complete"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp16" />
            </LinearLayout>
        </ScrollView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</LinearLayout>