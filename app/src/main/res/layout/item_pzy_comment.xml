<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llItem"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_pzy_comment_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivHeadIcon"
            android:layout_width="@dimen/dp36"
            android:layout_height="@dimen/dp36"
            android:layout_marginTop="@dimen/dp8"
            android:src="@drawable/header_default" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp8"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp16"
                android:layout_marginTop="@dimen/dp8">

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp12"
                    android:gravity="center_vertical|right"
                    android:text="2018-7-30 10:32"
                    android:textColor="@color/cb5b5b5"
                    android:textSize="@dimen/sp10" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp12"
                    android:layout_toLeftOf="@id/tvTime"
                    android:ellipsize="end"
                    android:gravity="center_vertical|left"
                    android:singleLine="true"
                    android:text="用户A"
                    android:textColor="@color/c434343"
                    android:textSize="@dimen/sp12" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp4"
                android:layout_marginTop="@dimen/dp4"
                android:ellipsize="end"
                android:gravity="center_vertical|left"
                android:maxLines="3"
                android:text="服务非常周到，态度非常好。帮我解决了不少麻烦事情。服务非常周到，态度非常好。帮我解决了不少麻烦事情。"
                android:textColor="@color/c434343"
                android:textSize="@dimen/sp10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
