<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp51"
    android:background="@color/topbar_bg_color">

    <TextView
        android:id="@+id/topbar_center_tx"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp51"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp18" />

    <LinearLayout
        android:id="@+id/llLeft"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp48"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/topbar_left_bt"
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:paddingBottom="@dimen/dp12"
            android:paddingLeft="@dimen/dp12"
            android:paddingRight="@dimen/dp6"
            android:paddingTop="@dimen/dp12"
            android:src="@drawable/back_topbar"
            android:visibility="gone" />

        <TextView
            android:id="@+id/topbar_left_tx_rightofbt"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp48"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp18"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/topbar_left_tx"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp51"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dp12"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp18"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/topbar_right_tx"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp51"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/dp12"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp18"
        android:visibility="invisible" />
</RelativeLayout>
