<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" />


    <LinearLayout
        android:id="@+id/llAll"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:background="@drawable/shape_white_solid_corner_small"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp18"
            android:layout_marginRight="@dimen/dp18"
            android:layout_marginTop="@dimen/dp18"
            android:gravity="center_vertical|left"
            android:text="订单提醒"
            android:textColor="@color/c06b49b"
            android:textSize="@dimen/sp18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp18"
            android:layout_marginRight="@dimen/dp18"
            android:layout_marginTop="@dimen/dp12"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp12"
                android:minHeight="@dimen/dp34"
                android:gravity="center_vertical|left"
                android:text="订单号："
                android:textColor="@color/c434343"
                android:textSize="@dimen/sp14" />

            <TextView
                android:id="@+id/tvOrderCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/dp34"
                android:layout_marginTop="@dimen/dp12"
                android:gravity="center_vertical|right"
                android:text="xxxxxx"
                android:textColor="@color/c434343"
                android:textSize="@dimen/sp14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp18"
            android:layout_marginRight="@dimen/dp18"
            android:layout_marginTop="@dimen/dp12"
            android:gravity="center_vertical"
            android:minHeight="@dimen/dp34"
            android:text="订单提醒内容："
            android:textColor="@color/c434343"
            android:textSize="@dimen/sp14" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_marginTop="@dimen/dp18"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLeft"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_cancelorder_cancel"
                android:gravity="center"
                android:text="知道了"
                android:textColor="@color/c434343"
                android:textSize="@dimen/sp16" />

            <TextView
                android:id="@+id/tvRight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_cancelorder_confirm"
                android:gravity="center"
                android:text="去查看"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal" />

</LinearLayout>
