<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp68"
    android:layout_marginLeft="@dimen/dp12"
    android:layout_marginRight="@dimen/dp12"
    android:background="@drawable/ripple_white_solid_corner2"
    android:paddingLeft="@dimen/dp12"
    app:layout_itemType="main">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="姓名"
            android:textColor="@color/c434343"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp6"
            android:gravity="center_vertical"
            android:text="电话"
            android:textColor="@color/c434343"
            android:textSize="@dimen/sp14" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivEdit"
        android:layout_width="@dimen/dp48"
        android:layout_height="@dimen/dp68"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="@dimen/dp22"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12"
        android:paddingTop="@dimen/dp22"
        android:scaleType="centerCrop"
        android:src="@drawable/edit_patientinfo" />
</RelativeLayout>
